	"version": "0.2.0",
	"configurations":
	[
		{
			"name": "UnitTests GDB",
			"type": "cppdbg",
			"request": "launch",
			//"program": "${workspaceFolder}/build/Install/UnitTests",
			"program": "${command:cmake.buildDirectory}/UnitTests/UnitTests",
			"args": [],
			"stopAtEntry": false,
			//"cwd": "${workspaceFolder}/build/Install",
			"cwd": "${command:cmake.buildDirectory}/UnitTests",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands":
			[
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "UnitTests VSDBG",
			"type": "cppvsdbg",
			"request": "launch",
			//"program": "${workspaceFolder}/build/Install/UnitTests.exe",
			"program": "${command:cmake.buildDirectory}/UnitTests/UnitTests.exe",
			"args": [],
			"stopAtEntry": false,
			//"cwd": "${workspaceFolder}/build/Install",
			"cwd": "${command:cmake.buildDirectory}/UnitTests",
			"environment": [],
			"console": "integratedTerminal",
		},
		{
			"name": "Visualizer GDB",
			"type": "cppdbg",
			"request": "launch",
			"program": "${command:cmake.buildDirectory}/Visualizer/Visualizer",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${command:cmake.buildDirectory}/Visualizer",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands":
			[
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "Visualizer VSDBG",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${command:cmake.buildDirectory}/Visualizer/Visualizer.exe",
